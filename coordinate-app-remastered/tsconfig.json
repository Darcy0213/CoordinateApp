{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@utils/*": ["app/utils/*"],
			"@components/*": ["app/components/*"],
			"@hooks/*": ["app/hooks/*"],
			"@theme/*": ["app/theme/*"],
			"@api/*": ["app/api/*"],
			"@common/*": ["app/components/common/*"],
			"@context/*": ["app/context/*"],
			"@globalTypes/*": ["app/types/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.d.ts", "app/**/*"],
	"exclude": ["node_modules"]
}
